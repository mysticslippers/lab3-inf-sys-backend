<?xml version="1.0" encoding="UTF-8"?>
<config
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="entityTemplate">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap>2000</heap>
        </resources>
    </cache-template>

    <cache alias="me.ifmo.backend.entities.Route" uses-template="entityTemplate"/>
    <cache alias="me.ifmo.backend.entities.Location" uses-template="entityTemplate"/>
    <cache alias="me.ifmo.backend.entities.Coordinates" uses-template="entityTemplate"/>
    <cache alias="me.ifmo.backend.entities.User" uses-template="entityTemplate"/>
</config>
